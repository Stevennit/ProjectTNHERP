@model IEnumerable<Hiver.ViewModels.Common.MenuViewModel>

@foreach (var menu in Model)
{
    if (menu.MenuOrder == 1) // Check vị trí menu
    {
        if (menu.Children.Any())
        {
            <li class="has-sub">
                <a href="javascript:;">
                    @if (menu.IconNumber.Trim() == "")
                    {
                        <b class="caret"></b>
                        <i class="@menu.IconClass"></i>
                        <span>@menu.MenuName</span>
                    }
                    else
                    {
                        <span class="badge pull-right">@menu.IconNumber</span>
                        <i class="@menu.IconClass"></i>
                        <span>@menu.MenuName</span>
                    }
                </a>
                <ul class="sub-menu">
                    <partial name="Components/Menu/_MenuPartial" model="menu.Children" />
                </ul>
            </li>
        }
        else
        {
            <li class="has-sub">
                <a href="@menu.Url">
                    @if (menu.IconNumber.Trim() == "")
                    {
                        <i class="@menu.IconClass"></i>
                        <span>@menu.MenuName</span>
                    }
                    else
                    {
                        <span class="badge pull-right">@menu.IconNumber</span>
                        <i class="@menu.IconClass"></i>
                        <span>@menu.MenuName</span>
                    }
                </a>
            </li>

        }
    }

}